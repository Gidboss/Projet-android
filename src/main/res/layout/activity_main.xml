<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abrault.gestionnairedesnotes.MainActivity">



     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Gestion des élèves"
         android:id="@+id/button_eleve"
         android:layout_below="@+id/button_devoir"
         android:layout_marginTop="39dp"
         android:layout_alignRight="@+id/button_classes"
         android:layout_alignEnd="@+id/button_classes"
         android:layout_alignLeft="@+id/button_devoir"
         android:layout_alignStart="@+id/button_devoir"
         android:onClick="buttonOnClick1" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestion des matières"
            android:id="@+id/button_matiere"
            android:layout_below="@+id/button_classes"
            android:layout_marginTop="48dp"
            android:layout_alignRight="@+id/button_devoir"
            android:layout_alignEnd="@+id/button_devoir"
            android:layout_alignLeft="@+id/button_devoir"
            android:layout_alignStart="@+id/button_devoir"
            android:onClick="buttonOnClick2" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestion des devoirs"
            android:id="@+id/button_devoir"
            android:layout_marginTop="82dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="buttonOnClick3" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestions des classes"
            android:id="@+id/button_classes"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/button_eleve"
            android:layout_alignRight="@+id/button_devoir"
            android:layout_alignEnd="@+id/button_devoir"
            android:layout_alignLeft="@+id/button_matiere"
            android:layout_alignStart="@+id/button_matiere"
            android:onClick="buttonOnClick4" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quitter"
            android:id="@+id/button_quitter"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="buttonOnClickQ" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Liste des notes par devoirs"
            android:id="@+id/textView"
            android:layout_below="@+id/button_devoir"
            android:layout_alignRight="@+id/button_devoir"
            android:layout_alignEnd="@+id/button_devoir" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Liste des élèves "
            android:id="@+id/textView2"
            android:layout_below="@+id/button_eleve"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Liste des classes"
            android:id="@+id/textView3"
            android:layout_below="@+id/button_classes"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Liste des notes par matière"
            android:id="@+id/textView4"
            android:layout_below="@+id/button_matiere"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Quitter l&apos;application"
            android:id="@+id/textView5"
            android:layout_above="@+id/button_quitter"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
